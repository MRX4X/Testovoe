server {
    listen 80 default_server;
    listen [::]:80 default_server;

    access_log /var/log/nginx/images_access.log;
    error_log  /var/log/nginx/images_error.log;

    server_name _;

    # Root for images
    location /images/ {
        alias /srv/images/;
        autoindex on;                # show directory listing
        autoindex_exact_size off;
        autoindex_localtime on;

        # Cache headers for 1 hour
        expires 1h;
        add_header Cache-Control "public";
    }

    # Enable gzip for static types
    gzip on;
    gzip_types image/svg+xml image/x-icon text/plain text/css application/javascript application/json application/xml;
    gzip_vary on;
}